<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <container name="promo-top" as="promo-top" label="Promo Top" htmlTag="div" htmlClass="promo-top" before="-">
                <block class="Magento\Framework\View\Element\Template" name="promo-top-page" template="Magento_Theme::promo.phtml"/>
            </container>
        </referenceContainer>
        <referenceContainer name="footer-container">
            <referenceBlock name="copyright" remove="true"/>
        </referenceContainer>
    </body>
</page>
