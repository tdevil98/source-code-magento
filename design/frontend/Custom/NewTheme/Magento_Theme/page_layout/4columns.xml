                <arguments>
                    <argument name="text" xsi:type="string">Sample text in fourth column</argument>
                </arguments>
            </block>
        </container>

        <container name="column3" htmlTag="div" htmlClass="column-float-left" after="-">
            <block class="Magento\Framework\View\Element\Text">
                <arguments>
                    <argument name="text" xsi:type="string">Sample text in fourth column</argument>
                </arguments>
            </block>
        </container>

        <container name="column4" htmlTag="div" htmlClass="column-float-left" after="-">
            <block class="Magento\Framework\View\Element\Template" name="test" template="Magento_Theme::lorem.phtml" />
        </container>

    </referenceContainer>

</layout>
